# Development Dockerfile with mulmocast-cli
FROM node:18-alpine

# Install system dependencies including canvas build dependencies
RUN apk add --no-cache \
    git \
    curl \
    bash \
    python3 \
    make \
    g++ \
    ffmpeg \
    imagemagick \
    pkgconfig \
    cairo-dev \
    pango-dev \
    libjpeg-turbo-dev \
    giflib-dev \
    librsvg-dev \
    pixman-dev

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci

# Clone and setup mulmocast-cli
RUN git clone https://github.com/receptron/mulmocast-cli.git /app/mulmocast-cli

# Install mulmocast-cli dependencies
WORKDIR /app/mulmocast-cli
RUN npm install

# Create necessary directories
RUN mkdir -p scripts output

# Go back to main app directory
WORKDIR /app

# Create necessary directories for showgeki2
RUN mkdir -p scripts

# Copy application files
COPY scripts/ ./scripts/
COPY .env.local ./

# Set environment variables
ENV NODE_ENV=development
ENV PORT=8080

# Expose port
EXPOSE 8080

# Run the development server directly
CMD ["sh", "-c", "echo 'ðŸš€ Development environment starting...' && echo 'ðŸ“¦ mulmocast-cli path: /app/mulmocast-cli' && echo 'ðŸ”§ Node.js version:' $(node --version) && echo 'ðŸŽ¬ FFmpeg available:' $(which ffmpeg) && echo '' && node scripts/local-debug.js"]